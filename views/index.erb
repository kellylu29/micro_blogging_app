<div class="front-page">
	<h1>This blog is a blog!</h1>
	<div class="front-page-post-container">
		<% if current_user %>
		<% @posts.each do |post| %>
			<div class="front-page-posts">
				<h3> <%= post.title %> </h3>
				<h3><a href="/users/<%= post.user.id %>"> <%= post.user.username %> </a> </h3>
				<hr>
				<p><%= post.content%></p>
				<br>
			</div>
		<% end %>
		<% else %>
			<button class="btn btn-lg btn-primary"><a href="/login">Login</a></button>
			<button class="btn btn-lg btn-primary"><a href="/signup">Sign up</a></button>
		<% end %>
	</div>
</div>