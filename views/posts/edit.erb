<h1>Edit Post</h1>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label><b>Title:</b></label><br>
  <input
  type="text"
  name="post[title]"
  value="<%= @post.title %>">
  <br><br>

  <label><b>Content:</b></label><br>
  <textarea name="post[content]"
  rows="16"
  cols="70"
  maxlength="150"
  value="<%= @post.content %>">
  </textarea>
  <br><br>

  <label><b>Author:</b></label><br>
  <input
  type="text"
  name="post[username]"
  value="<%= @post.username %>">
  <br><br>

  <input type="submit" name="" value="Submit">

</form>

<p><a href="/posts/<%= @post.id %>">Back</a></p>
