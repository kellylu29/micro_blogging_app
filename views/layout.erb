<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>This blog is a blog!</title>
    <link rel="stylesheet" href="/css/master.css">
  </head>
  <body>
  <div class="container">
    <div class="flash-message">

      <% if flash[:notice] %>
        <div class="flash-notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="flash-alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

    </div>
    <div class="nav-bar">
      <span>
      <a href="/">Home</a>

      <% if current_user %>
        <a href="/users/<%= current_user.id %>">My Profile</a>
        <a href="/posts/new">Add New Post</a>
        <a href="/">View All Posts</a>
        <a href="/logout">Logout</a>

      <% else %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
      <% end %>
      </span>
    </div>

    <p>Logged in as: <%= current_user ? current_user.username : "no one :(" %></p>
    <%= yield %>
  </div>  
    <script src="/js/master.js"></script>
  </body>
</html>
