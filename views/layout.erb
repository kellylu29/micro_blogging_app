<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>This blog is a blog!</title>
  </head>
  <body>
    <div class="flash-message">

      <% if flash[:notice] %>
        <div class="flash-notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="flash-alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

    </div>

    <a href="/">Home</a>

    <% if current_user %>
      <a href="/posts/new">Add New Post</a>
      <a href="/logout">Logout</a>

    <% else %>
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    <% end %>

    <br>
    <span><a href="/">View All Posts</a></span>

    <p>Current user: <%= current_user ? current_user.username : "no one :(" %></p>
    <%= yield %>
  </body>
</html>
